{
  "compilerOptions": {
    "module": "NodeNext", 
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true, 
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "src", "test/**/*"],
  "exclude": ["node_modules"]
}
